---
/**
 * Components Showcase
 *
 * Demonstrates all available component variants with examples.
 * Use this page as a reference when building new pages.
 */

import DefaultLayout from '@layouts/DefaultLayout.astro';

// Hero variants (import directly from .astro files)
import HeroStandard from '@components/sections/heroes/HeroStandard.astro';
import HeroSplit from '@components/sections/heroes/HeroSplit.astro';
import HeroMinimal from '@components/sections/heroes/HeroMinimal.astro';

// Features variants (import directly from .astro files)
import FeaturesGrid from '@components/sections/features/FeaturesGrid.astro';
import FeaturesList from '@components/sections/features/FeaturesList.astro';
import FeaturesAlternating from '@components/sections/features/FeaturesAlternating.astro';

// CTA variants (import directly from .astro files)
import CTASimple from '@components/sections/cta/CTASimple.astro';
import CTABanner from '@components/sections/cta/CTABanner.astro';
import CTASplit from '@components/sections/cta/CTASplit.astro';

// Gallery variants (import directly from .astro files)
import GalleryGrid from '@components/sections/galleries/GalleryGrid.astro';
import GalleryCarousel from '@components/sections/galleries/GalleryCarousel.astro';

// UI components
import Section from '@components/ui/Section.astro';
import Container from '@components/ui/Container.astro';
import Button from '@components/ui/Button.astro';
import SplitContainer from '@components/ui/SplitContainer.astro';
import Breadcrumb from '@components/ui/Breadcrumb.astro';
import PageLoader from '@components/ui/PageLoader.astro';
import IconList from '@components/ui/IconList.astro';
import BulletList from '@components/ui/BulletList.astro';
import SimpleCard from '@components/ui/cards/SimpleCard.astro';
import SlimCard from '@components/ui/cards/SlimCard.astro';
import ImageCard from '@components/ui/cards/ImageCard.astro';
import MediaCard from '@components/ui/cards/MediaCard.astro';
import SideNav from '@components/ui/SideNav.astro';

// Images
import backgroundImg from '@assets/images/background.png';
import placeholderImg from '@assets/images/placeholder.png';

// Sample data
const sampleFeatures = [
  {
    title: 'Fast Performance',
    description: 'Optimized for speed with minimal JavaScript and efficient asset loading.',
    icon: 'fa-solid fa-bolt',
  },
  {
    title: 'Fully Responsive',
    description: 'Looks great on any device, from mobile phones to large desktop screens.',
    icon: 'fa-solid fa-mobile-screen',
  },
  {
    title: 'Easy to Customize',
    description: 'Built with CSS custom properties for quick theming and customization.',
    icon: 'fa-solid fa-palette',
  },
];

const alternatingFeatures = [
  {
    title: 'Content-First Architecture',
    description: 'Our boilerplate separates content from presentation, making it easy to update text and images without touching code. Perfect for AI-assisted content population.',
    image: { src: placeholderImg.src, alt: 'Content architecture diagram' },
    icon: 'fa-solid fa-file-lines',
  },
  {
    title: 'Variant-Based Components',
    description: 'Each component category offers multiple variants that share the same TypeScript interface. Switch layouts without restructuring your content data.',
    image: { src: placeholderImg.src, alt: 'Component variants illustration' },
    icon: 'fa-solid fa-layer-group',
  },
  {
    title: 'Configuration-Driven',
    description: 'Global site settings control component selection, theming, and behavior. One config file, site-wide changes.',
    image: { src: placeholderImg.src, alt: 'Configuration settings' },
    icon: 'fa-solid fa-sliders',
  },
];

const sampleGalleryItems = [
  { image: { src: 'https://picsum.photos/seed/gallery1/800/600', alt: 'Gallery image 1' }, title: 'Mountain Vista', description: 'Scenic mountain landscape' },
  { image: { src: 'https://picsum.photos/seed/gallery2/800/600', alt: 'Gallery image 2' }, title: 'Ocean Sunset', description: 'Beautiful coastal view' },
  { image: { src: 'https://picsum.photos/seed/gallery3/800/600', alt: 'Gallery image 3' }, title: 'Forest Path', description: 'Peaceful woodland trail' },
  { image: { src: 'https://picsum.photos/seed/gallery4/800/600', alt: 'Gallery image 4' }, title: 'City Lights', description: 'Urban nightscape' },
  { image: { src: 'https://picsum.photos/seed/gallery5/800/600', alt: 'Gallery image 5' }, title: 'Desert Dunes', description: 'Golden sand formations' },
  { image: { src: 'https://picsum.photos/seed/gallery6/800/600', alt: 'Gallery image 6' }, title: 'Waterfall', description: 'Cascading natural beauty' },
];

// Side navigation items
const sideNavItems = [
  {
    label: 'Section Components',
    children: [
      { label: 'Heroes', href: '#heroes' },
      { label: 'Features', href: '#features' },
      { label: 'CTA', href: '#cta-variants' },
      { label: 'Galleries', href: '#gallery-variants' },
    ],
  },
  {
    label: 'UI Components',
    children: [
      { label: 'Buttons & Containers', href: '#ui-components' },
      { label: 'SplitContainer', href: '#split-demo' },
      { label: 'Breadcrumb', href: '#breadcrumbs' },
      { label: 'Page Loader', href: '#page-loader' },
      { label: 'Lists', href: '#lists' },
      {
        label: 'Cards',
        href: '#cards',
        children: [
          { label: 'SimpleCard', href: '#cards' },
          { label: 'SlimCard', href: '#cards' },
          { label: 'ImageCard', href: '#cards' },
          { label: 'MediaCard', href: '#cards' },
        ],
      },
    ],
  },
  {
    label: 'Usage',
    href: '#usage',
  },
];
---

<DefaultLayout
  title="Components - Documentation"
  description="Showcase of all available component variants in the boilerplate."
>
  <!-- Page Header -->
  <HeroMinimal
    title="Components Showcase"
    subtitle="Explore all available component variants and their usage"
    id="page-header"
  />

  <!-- Two-column layout with SideNav -->
  <div class="docs-layout">
    <aside class="docs-layout__sidebar">
      <SideNav
        items={sideNavItems}
        title="On this page"
        position="sticky"
        topOffset="var(--space-24)"
        collapsible={true}
        defaultExpanded={true}
      />
    </aside>

    <main class="docs-layout__content">
      <!-- Hero Variants Section -->
      <Section id="heroes" container={{ size: 'xl' }}>
    <h2>Hero Variants</h2>
    <p class="section-subtitle">
      Heroes support multiple layouts. All variants share the same props interface.
    </p>

    <div class="variant-grid">
      <div class="variant-card">
        <h3>HeroStandard</h3>
        <p>Full-width with background image and overlay. Best for landing pages.</p>
        <code>import HeroStandard from '@components/sections/heroes/HeroStandard.astro';</code>
      </div>
      <div class="variant-card">
        <h3>HeroSplit</h3>
        <p>Content and image side by side. Best for product showcases.</p>
        <code>import HeroSplit from '@components/sections/heroes/HeroSplit.astro';</code>
      </div>
      <div class="variant-card">
        <h3>HeroMinimal</h3>
        <p>Text only with optional breadcrumbs. Best for inner pages.</p>
        <code>import HeroMinimal from '@components/sections/heroes/HeroMinimal.astro';</code>
      </div>
    </div>
  </Section>

  <!-- HeroStandard Demo -->
  <div class="demo-section">
    <div class="demo-label">HeroStandard</div>
  </div>
  <HeroStandard
    title="Standard Hero Example"
    subtitle="Full-width hero with background image and overlay. Perfect for landing pages and home pages where you want maximum visual impact."
    backgroundImage={backgroundImg.src}
    actions={[
      { label: 'Get Started', href: '#', variant: 'primary' },
      { label: 'Learn More', href: '#', variant: 'white' },
    ]}
    size="partial"
    alignment="center"
    id="hero-standard-demo"
  />

  <!-- HeroSplit Demo -->
  <div class="demo-section">
    <div class="demo-label">HeroSplit</div>
  </div>
  <HeroSplit
    title="Split Hero Example"
    container={{ size: "full" }}
    subtitle="This variant places content and imagery side by side, great for product showcases and SaaS landing pages."
    image={{ src: placeholderImg.src, alt: 'Product showcase' }}
    imagePosition="right"
    actions={[
      { label: 'Primary Action', href: '#', variant: 'primary' },
      { label: 'Secondary', href: '#', variant: 'secondary' },
    ]}
    size="auto"
    id="hero-split-demo"
  />

  <!-- HeroSplit Demo (Image Left) -->
  <div class="demo-section">
    <div class="demo-label">HeroSplit (Image Left)</div>
  </div>
  <HeroSplit
    title="Split Hero - Left Image"
    container={{ size: "full" }}
    subtitle="The same Split Hero variant but with the image positioned on the left side. Use imagePosition='left' to achieve this layout."
    image={{ src: placeholderImg.src, alt: 'App screenshot' }}
    imagePosition="left"
    actions={[
      { label: 'Download App', href: '#', variant: 'primary' },
    ]}
    size="auto"
    id="hero-split-left-demo"
  />

  <!-- HeroMinimal Demo -->
  <div class="demo-section">
    <div class="demo-label">HeroMinimal</div>
  </div>
  <HeroMinimal
    title="Minimal Hero Example"
    subtitle="Simple text-only hero perfect for inner pages, documentation, and content sections."
    breadcrumbs={[
      { href: '/', label: 'Home' },
      { href: '/docs', label: 'Docs' },
      { href: '/docs/components', label: 'Components' },
    ]}
    id="hero-minimal-demo"
  />

  <!-- Features Variants Section -->
  <Section id="features" classList="section--alt" container={{ size: 'full' }}>
    <h2>Features Variants</h2>
    <p class="section-subtitle">
      Display feature lists, benefits, or services with different layouts.
    </p>

    <div class="variant-grid">
      <div class="variant-card">
        <h3>FeaturesGrid</h3>
        <p>Card grid layout with configurable columns (2, 3, or 4).</p>
        <code>import FeaturesGrid from '@components/sections/features/FeaturesGrid.astro';</code>
      </div>
      <div class="variant-card">
        <h3>FeaturesList</h3>
        <p>Vertical list with optional dividers. Clean and scannable.</p>
        <code>import FeaturesList from '@components/sections/features/FeaturesList.astro';</code>
      </div>
      <div class="variant-card">
        <h3>FeaturesAlternating</h3>
        <p>Zigzag layout with images. Great for detailed explanations.</p>
        <code>import FeaturesAlternating from '@components/sections/features/FeaturesAlternating.astro';</code>
      </div>
    </div>
  </Section>

  <!-- FeaturesGrid Demo -->
  <div class="demo-section">
    <div class="demo-label">FeaturesGrid (3 columns)</div>
  </div>
  <FeaturesGrid
    heading="Features Grid Example"
    subheading="Card grid layout with icons. Configurable columns: 2, 3, or 4."
    features={sampleFeatures}
    columns={3}
    id="features-grid-demo"
  />

  <!-- FeaturesGrid Demo (4 columns) -->
  <div class="demo-section">
    <div class="demo-label">FeaturesGrid (4 columns)</div>
  </div>
  <FeaturesGrid
    heading="Four Column Grid"
    subheading="Same component with columns={4} for more compact layouts."
    features={[...sampleFeatures, { title: 'Secure', description: 'Built with security best practices and regular audits.', icon: 'fa-solid fa-shield-halved' }]}
    columns={4}
    background={{ variant: 'alt' }}
    id="features-grid-4-demo"
  />

  <!-- FeaturesList Demo -->
  <div class="demo-section">
    <div class="demo-label">FeaturesList</div>
  </div>
  <FeaturesList
    heading="Features List Example"
    container={{ size: "medium" }}
    subheading="Vertical list with dividers. Clean and scannable."
    features={sampleFeatures}
    dividers={true}
    id="features-list-demo"
  />

  <!-- FeaturesAlternating Demo -->
  <div class="demo-section">
    <div class="demo-label">FeaturesAlternating</div>
  </div>
  <FeaturesAlternating
    heading="Features Alternating Example"
    subheading="Zigzag layout with images. Great for detailed explanations."
    features={alternatingFeatures}
    id="features-alternating-demo"
  />

  <!-- CTA Variants Section -->
  <Section id="cta-variants" classList="section--alt" container={{ size: 'xl' }}>
    <h2>CTA Variants</h2>
    <p class="section-subtitle">
      Call-to-action sections for converting visitors.
    </p>

    <div class="variant-grid">
      <div class="variant-card">
        <h3>CTASimple</h3>
        <p>Centered text with action buttons. Clean and focused.</p>
        <code>import CTASimple from '@components/sections/cta/CTASimple.astro';</code>
      </div>
      <div class="variant-card">
        <h3>CTABanner</h3>
        <p>Full-width banner with background. High visual impact.</p>
        <code>import CTABanner from '@components/sections/cta/CTABanner.astro';</code>
      </div>
      <div class="variant-card">
        <h3>CTASplit</h3>
        <p>Content with featured image. Great for app downloads.</p>
        <code>import CTASplit from '@components/sections/cta/CTASplit.astro';</code>
      </div>
    </div>
  </Section>

  <!-- CTASimple Demo -->
  <div class="demo-section">
    <div class="demo-label">CTASimple</div>
  </div>
  <CTASimple
    heading="Simple CTA Example"
    description="This is a centered call-to-action with clean, focused design. Perfect for newsletter signups or general CTAs."
    actions={[
      { label: 'Get Started', href: '#', variant: 'primary' },
      { label: 'Learn More', href: '#', variant: 'secondary' },
    ]}
    id="cta-simple-demo"
  />

  <!-- CTASimple Demo (Dark) -->
  <div class="demo-section">
    <div class="demo-label">CTASimple (Dark Background)</div>
  </div>
  <CTASimple
    heading="Dark Background CTA"
    description="Same CTASimple component with background={{ variant: 'dark' }} for contrast."
    actions={[
      { label: 'Get Started', href: '#', variant: 'white' },
      { label: 'Learn More', href: '#', variant: 'secondary' },
    ]}
    background={{ variant: 'dark' }}
    id="cta-simple-dark-demo"
  />

  <!-- CTABanner Demo -->
  <div class="demo-section">
    <div class="demo-label">CTABanner</div>
  </div>
  <CTABanner
    heading="Banner CTA Example"
    description="Full-width banner with high visual impact. Great for promotional messages."
    actions={[
      { label: 'Contact Us', href: '/contact', variant: 'light' },
    ]}
    id="cta-banner-demo"
  />

  <!-- CTABanner Demo (Compact) -->
  <div class="demo-section">
    <div class="demo-label">CTABanner (Compact)</div>
  </div>
  <CTABanner
    heading="Compact Banner CTA"
    description="Same component with compact={true} for smaller footprint."
    actions={[
      { label: 'Sign Up Now', href: '#', variant: 'white' },
    ]}
    compact={true}
    id="cta-banner-compact-demo"
  />

  <!-- CTASplit Demo -->
  <div class="demo-section">
    <div class="demo-label">CTASplit</div>
  </div>
  <CTASplit
    heading="Split CTA Example"
    description="Content paired with a featured image. Ideal for app downloads or product showcases."
    image={{ src: placeholderImg.src, alt: 'App preview' }}
    imagePosition="right"
    actions={[
      { label: 'Download Now', href: '#', variant: 'primary' },
    ]}
    id="cta-split-demo"
  />

  <!-- CTASplit Demo (Image Left) -->
  <div class="demo-section">
    <div class="demo-label">CTASplit (Image Left)</div>
  </div>
  <CTASplit
    heading="Split CTA - Left Image"
    description="Same component with imagePosition='left' for opposite layout."
    image={{ src: placeholderImg.src, alt: 'Dashboard preview' }}
    imagePosition="left"
    actions={[
      { label: 'Try Free', href: '#', variant: 'primary' },
      { label: 'View Demo', href: '#', variant: 'secondary' },
    ]}
    background={{ variant: 'alt' }}
    id="cta-split-left-demo"
  />

  <!-- Gallery Variants Section -->
  <Section id="gallery-variants" container={{ size: 'full' }}>
    <h2>Gallery Variants</h2>
    <p class="section-subtitle">
      Display image collections with grid or carousel layouts. Both support optional lightbox feature.
    </p>

    <div class="variant-grid">
      <div class="variant-card">
        <h3>GalleryGrid</h3>
        <p>Responsive grid with optional overlay captions and lightbox. Best for portfolios.</p>
        <code>import GalleryGrid from '@components/sections/galleries/GalleryGrid.astro';</code>
      </div>
      <div class="variant-card">
        <h3>GalleryCarousel</h3>
        <p>Sliding carousel with autoplay, navigation, and optional lightbox. Great for featured work.</p>
        <code>import GalleryCarousel from '@components/sections/galleries/GalleryCarousel.astro';</code>
      </div>
      <div class="variant-card">
        <h3>Lightbox Feature</h3>
        <p>Add <code>lightbox={'{true}'}</code> to either variant for full-screen image viewing with keyboard navigation.</p>
        <code>{'<GalleryGrid items={items} lightbox={true} />'}</code>
      </div>
    </div>
  </Section>

  <!-- GalleryGrid Demo -->
  <div class="demo-section">
    <div class="demo-label">GalleryGrid</div>
  </div>
  <GalleryGrid
    heading="Grid Gallery"
    subheading="Responsive grid layout with hover overlays"
    items={sampleGalleryItems}
    columns={3}
    aspectRatio="landscape"
    showOverlay={true}
    id="gallery-grid-demo"
  />

  <!-- GalleryGrid Demo (Square, 4 columns) -->
  <div class="demo-section">
    <div class="demo-label">GalleryGrid (Square, 4 columns)</div>
  </div>
  <GalleryGrid
    items={sampleGalleryItems}
    columns={4}
    aspectRatio="square"
    gap="small"
    showOverlay={true}
    background={{ variant: 'alt' }}
    id="gallery-grid-square-demo"
  />

  <!-- GalleryCarousel Demo -->
  <div class="demo-section">
    <div class="demo-label">GalleryCarousel</div>
  </div>
  <GalleryCarousel
    heading="Carousel Gallery"
    subheading="Swipeable slides with navigation arrows and dots"
    items={sampleGalleryItems}
    slidesPerView={3}
    showArrows={true}
    showDots={true}
    aspectRatio="landscape"
    id="gallery-carousel-demo"
  />

  <!-- GalleryCarousel Demo (Autoplay with Loop) -->
  <div class="demo-section">
    <div class="demo-label">GalleryCarousel (Autoplay, Loop)</div>
  </div>
  <GalleryCarousel
    items={sampleGalleryItems}
    slidesPerView={1}
    autoplay={true}
    autoplayInterval={4000}
    loop={true}
    showArrows={true}
    showDots={true}
    aspectRatio="landscape"
    background={{ variant: 'dark' }}
    id="gallery-carousel-autoplay-demo"
  />

  <!-- GalleryGrid with Lightbox Demo -->
  <div class="demo-section">
    <div class="demo-label">GalleryGrid (with Lightbox)</div>
  </div>
  <GalleryGrid
    heading="Grid with Lightbox"
    subheading="Click any image to open full-screen viewer with keyboard navigation"
    items={sampleGalleryItems}
    columns={3}
    aspectRatio="square"
    showOverlay={true}
    lightbox={true}
    id="gallery-grid-lightbox-demo"
  />

  <!-- GalleryCarousel with Lightbox Demo -->
  <div class="demo-section">
    <div class="demo-label">GalleryCarousel (with Lightbox)</div>
  </div>
  <GalleryCarousel
    heading="Carousel with Lightbox"
    subheading="Click any slide to open full-screen viewer"
    items={sampleGalleryItems}
    slidesPerView={3}
    showArrows={true}
    showDots={true}
    lightbox={true}
    background={{ variant: 'alt' }}
    id="gallery-carousel-lightbox-demo"
  />

  <!-- UI Components Section -->
  <Section id="ui-components" container={{ size: 'xl' }}>
    <h2>UI Components</h2>
    <p class="section-subtitle">
      Reusable primitives for building custom sections.
    </p>

    <div class="ui-demo">
      <h3>Buttons</h3>
      <div class="button-demo">
        <Button variant="primary">Primary</Button>
        <Button variant="secondary">Secondary</Button>
        <Button variant="tertiary">Tertiary</Button>
        <Button variant="success">Success</Button>
        <Button variant="danger">Danger</Button>
        <Button variant="warning">Warning</Button>
      </div>

      <h4>Outline Variants</h4>
      <div class="button-demo">
        <Button variant="primary" outline>Primary</Button>
        <Button variant="secondary" outline>Secondary</Button>
        <Button variant="dark" outline>Dark</Button>
      </div>

      <h4>Sizes</h4>
      <div class="button-demo">
        <Button variant="primary" size="small">Small</Button>
        <Button variant="primary" size="medium">Medium</Button>
        <Button variant="primary" size="large">Large</Button>
      </div>
    </div>
  </Section>

  <!-- SplitContainer Demo -->
  <div class="demo-section">
    <div class="demo-label">SplitContainer (Image Right)</div>
  </div>
  <Section id="split-demo" container={{ size: 'xl' }}>
    <SplitContainer
      image={{ src: placeholderImg.src, alt: 'Feature showcase' }}
      imagePosition="right"
      ratio="50-50"
      verticalAlign="center"
      imageRounded={true}
      imageShadow={true}
    >
      <h2 class="split-demo__title">Split Container Component</h2>
      <p class="split-demo__text">
        A flexible split layout for side-by-side content. Perfect for feature showcases,
        about sections, testimonials, and any content that benefits from image/text pairings.
      </p>
      <p class="split-demo__text">
        Supports configurable ratios (50-50, 40-60, 60-40, 33-67, 67-33), image positioning,
        and vertical alignment options.
      </p>
      <div class="split-demo__actions">
        <Button variant="primary">Learn More</Button>
        <Button variant="secondary" outline>View Code</Button>
      </div>
    </SplitContainer>
  </Section>

  <!-- SplitContainer Demo (Image Left, Different Ratio) -->
  <div class="demo-section">
    <div class="demo-label">SplitContainer (Image Left, 40-60 Ratio)</div>
  </div>
  <Section id="split-demo-2" classList="section--alt" container={{ size: 'xl' }}>
    <SplitContainer
      image={{ src: 'https://picsum.photos/seed/split1/600/500', alt: 'App preview' }}
      imagePosition="left"
      ratio="40-60"
      verticalAlign="center"
      imageRounded={true}
    >
      <h2 class="split-demo__title">Flexible Layouts</h2>
      <p class="split-demo__text">
        Use different ratios to emphasize content or imagery. The 40-60 ratio gives more
        space to the content side, perfect for detailed descriptions.
      </p>
      <ul class="split-demo__list">
        <li><strong>Responsive:</strong> Stacks on mobile, side-by-side on desktop</li>
        <li><strong>Customizable:</strong> Gap sizes, alignment, and border radius options</li>
        <li><strong>Flexible:</strong> Use image prop or named slots for custom content</li>
      </ul>
    </SplitContainer>
  </Section>

  <!-- SplitContainer Demo (With Slots) -->
  <div class="demo-section">
    <div class="demo-label">SplitContainer (Using Slots)</div>
  </div>
  <Section id="split-demo-3" container={{ size: 'xl' }}>
    <SplitContainer ratio="50-50" verticalAlign="center" gap="large">
      <div slot="start" class="split-slot-demo">
        <h3>Custom Start Slot</h3>
        <p>Use named slots for complete control over both columns. Perfect for non-image content like stats, forms, or custom layouts.</p>
      </div>
      <div slot="end" class="split-slot-demo split-slot-demo--alt">
        <h3>Custom End Slot</h3>
        <p>Each slot can contain any content you need - cards, lists, forms, or nested components.</p>
      </div>
    </SplitContainer>
  </Section>

  <!-- Breadcrumb Demos -->
  <Section id="breadcrumbs" container={{ size: 'large' }}>
    <h2>Breadcrumb</h2>
    <p class="section-subtitle">
      Navigation breadcrumbs with URL-based or property-based modes.
    </p>

    <div class="breadcrumb-demos">
      <div class="breadcrumb-demo">
        <h3>Property-based (Manual Items)</h3>
        <p>Specify breadcrumb items manually via the <code>items</code> prop.</p>
        <div class="breadcrumb-demo__preview">
          <Breadcrumb
            items={[
              { label: 'Products', href: '/products' },
              { label: 'Electronics', href: '/products/electronics' },
              { label: 'Laptops' }
            ]}
          />
        </div>
        <pre><code>{`<Breadcrumb
  items={[
    { label: 'Products', href: '/products' },
    { label: 'Electronics', href: '/products/electronics' },
    { label: 'Laptops' }
  ]}
/>`}</code></pre>
      </div>

      <div class="breadcrumb-demo">
        <h3>URL-based (Auto)</h3>
        <p>Automatically generate breadcrumbs from the current URL path.</p>
        <div class="breadcrumb-demo__preview">
          <Breadcrumb auto />
        </div>
        <pre><code>{`<Breadcrumb auto />`}</code></pre>
      </div>

