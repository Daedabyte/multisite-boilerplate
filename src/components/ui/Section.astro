---
import Container from "./Container.astro";
import type { Props as ContainerProps } from "./Container.astro";

export interface Props {
    id: string;
    container?: ContainerProps;
    classList?: string;
}

const { id, container, classList = "", ...attrs } = Astro.props;
---

<section id={id} class={`section ${classList}`} {...attrs}>
    <Container {...container}>
        <slot />
    </Container>
</section>

<style lang="scss" is:global>
    @use "sass:map";
    @use "../../styles/abstracts" as *;

    .section {
        padding: var(--space-20) 0 var(--space-20);
        position: relative;
        text-align: center;

        @include media-down("md") {
            padding: var(--space-16) 0 var(--space-12);
        }
    }
</style>
