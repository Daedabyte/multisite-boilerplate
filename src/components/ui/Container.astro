---
export interface Props {
  size?: "small" | "medium" | "large" | "xl" | "full";
  as?: any;
  classList?: string;
}

const { 
  size = "full", 
  as: Tag = "div", 
  classList = "" 
} = Astro.props;
---

<Tag class={`container container--${size} ${classList}`}>
  <slot />
</Tag>

<style lang="scss" is:global>
  @use "../../styles/abstracts" as *;

  // Containers
  @mixin container($size: "large") {
    width: 100%;
    margin-inline: auto;
    padding-inline: var(--space-4);
    max-width: var(--container-max-width-#{$size});

    @include media-up("md") {
      padding-inline: var(--space-6);
    }
  }

  .container {
    @include container();
  }

  @each $size, $width in $container-max-widths {
    .container--#{$size} {
      @include container($size);
    }
  }
</style>
