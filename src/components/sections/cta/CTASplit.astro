---
/**
 * CTASplit
 *
 * Split layout CTA with image alongside content.
 * Visual impact with space for featured imagery.
 *
 * @variant split
 * @since 1.0.0
 *
 * Best for: Product showcases, app downloads, feature highlights
 * Avoid when: Don't have strong visual content
 *
 * @example
 * <CTASplit
 *   heading="Download Our App"
 *   description="Available on iOS and Android."
 *   image={{ src: '/app-mockup.png', alt: 'App mockup' }}
 *   imagePosition="right"
 *   actions={[{ label: 'Get the App', href: '/download' }]}
 * />
 */

import type { CTABaseProps } from './types';
import Container from '@components/layout/Container.astro';

/**
 * Split CTA variant props
 */
interface Props extends CTABaseProps {
  /** Featured image */
  image: {
    src: string;
    alt: string;
  };
  /** Image position */
  imagePosition?: 'left' | 'right';
}

const {
  heading,
  description,
  actions = [],
  image,
  imagePosition = 'right',
  background,
  container,
  classList,
  id = 'cta',
  ...attrs
} = Astro.props;
---

<section
  id={id}
  class:list={[
    'cta',
    'cta--split',
    `cta--image-${imagePosition}`,
    background?.variant === 'alt' && 'cta--alt',
    classList
  ]}
  {...attrs}
>
  <Container {...container}>
    <div class="cta__inner">
      <div class="cta__content">
        <h2 class="cta__heading">{heading}</h2>
        {description && <p class="cta__description">{description}</p>}

        {actions.length > 0 && (
          <div class="cta__actions">
            {actions.map((action, index) => (
              <a
                href={action.href}
                class={`btn btn--${action.variant ?? (index === 0 ? 'primary' : 'outline')}`}
                {...action.external ? { target: '_blank', rel: 'noopener noreferrer' } : {}}
              >
                {action.label}
              </a>
            ))}
          </div>
        )}

        <slot />
      </div>

      <div class="cta__image">
        <img src={image.src} alt={image.alt} />
      </div>
    </div>
  </Container>
</section>

<style lang="scss" is:global>
  @use './cta.scss';
</style>

<style lang="scss">
  @use '../../../styles/abstracts' as *;

  // Variant: Split
  .cta--split {
    .cta__inner {
      display: grid;
      gap: var(--space-8);
      align-items: center;

      @include media-up('lg') {
        grid-template-columns: 1fr 1fr;
        gap: var(--space-12);
      }
    }

    &.cta--image-left {
      @include media-up('lg') {
        .cta__image {
          order: -1;
        }
      }
    }

    .cta__content {
      @include media-down('lg') {
        text-align: center;
      }
    }

    .cta__actions {
      @include media-down('lg') {
        justify-content: center;
      }
    }

    .cta__image {
      img {
        border-radius: var(--border-radius-xl);
        box-shadow: var(--shadow-lg);
      }
    }
  }
</style>
