---
/**
 * CTABanner
 *
 * Full-width banner call-to-action with optional background.
 * High-impact layout for converting visitors.
 *
 * @variant banner
 * @since 1.0.0
 *
 * Best for: Page endings, promotional banners, urgent calls to action
 * Avoid when: Need subtle or minimal design
 *
 * @example
 * <CTABanner
 *   heading="Limited Time Offer"
 *   description="Get 50% off your first order."
 *   actions={[{ label: 'Shop Now', href: '/shop', variant: 'white' }]}
 *   compact={false}
 * />
 */

import type { CTABaseProps } from './types';
import Container from '@components/layout/Container.astro';

/**
 * Banner CTA variant props
 */
interface Props extends CTABaseProps {
  /** Compact styling */
  compact?: boolean;
}

const {
  heading,
  description,
  actions = [],
  compact = false,
  background,
  container,
  classList,
  id = 'cta',
  ...attrs
} = Astro.props;

const bgImage = background?.image;
---

<section
  id={id}
  class:list={[
    'cta',
    'cta--banner',
    compact && 'cta--compact',
    background?.variant === 'dark' && 'cta--dark',
    background?.variant === 'primary' && 'cta--primary',
    classList
  ]}
  style={bgImage ? `--cta-bg-image: url(${bgImage})` : undefined}
  {...attrs}
>
  <Container {...container}>
    <div class="cta__inner">
      <div class="cta__content">
        <h2 class="cta__heading">{heading}</h2>
        {description && <p class="cta__description">{description}</p>}
      </div>

      {actions.length > 0 && (
        <div class="cta__actions">
          {actions.map((action, index) => (
            <a
              href={action.href}
              class={`btn btn--${action.variant ?? (index === 0 ? 'white' : 'outline-white')}`}
              {...action.external ? { target: '_blank', rel: 'noopener noreferrer' } : {}}
            >
              {action.label}
            </a>
          ))}
        </div>
      )}

      <slot />
    </div>
  </Container>
</section>

<style lang="scss" is:global>
  @use './cta.scss';
</style>

<style lang="scss">
  @use '../../../styles/abstracts' as *;

  // Variant: Banner
  .cta--banner {
    padding-block: var(--space-12);
    background-color: var(--color-primary);
    color: var(--color-white);
    background-image: var(--cta-bg-image);
    background-size: cover;
    background-position: center;
    position: relative;

    @include media-up('lg') {
      padding-block: var(--space-16);
    }

    // Overlay for background images
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      opacity: 0;
      transition: var(--transition-base);
    }

    &[style*="--cta-bg-image"]::before {
      opacity: 1;
    }

    .cta__inner {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: var(--space-6);
      position: relative;
      z-index: 1;

      @include media-up('lg') {
        flex-direction: row;
        justify-content: space-between;
        text-align: left;
      }
    }

    .cta__heading {
      color: var(--color-white);
      margin-bottom: var(--space-2);

      @include media-up('lg') {
        margin-bottom: 0;
      }
    }

    .cta__description {
      color: var(--color-neutral-200);
      margin-bottom: 0;
    }

    .cta__actions {
      margin-top: 0;
      flex-shrink: 0;
    }

    &.cta--compact {
      padding-block: var(--space-8);

      @include media-up('lg') {
        padding-block: var(--space-10);
      }

      .cta__heading {
        font-size: var(--font-size-xl);

        @include media-up('lg') {
          font-size: var(--font-size-xxl);
        }
      }

      .cta__description {
        font-size: var(--font-size-base);
      }
    }
  }
</style>
