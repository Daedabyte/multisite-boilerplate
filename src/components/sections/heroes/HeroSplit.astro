---
/**
 * HeroSplit
 *
 * Content on one side, featured image on the other.
 * Great for showcasing products or team photos.
 *
 * @variant split
 * @since 1.0.0
 *
 * Best for: Product showcases, SaaS landing pages, team intros
 * Avoid when: Need full-width visual impact
 *
 * @example
 * <HeroSplit
 *   title="Our Product"
 *   subtitle="The best solution for your needs"
 *   image={{ src: '/images/product.jpg', alt: 'Product screenshot' }}
 *   imagePosition="right"
 *   actions={[{ label: 'Learn More', href: '/product' }]}
 * />
 */

import type { HeroSplitProps } from './types';
import Container from '@components/ui/Container.astro';
import Button from '@components/ui/Button.astro';
import { Image } from 'astro:assets';

interface Props extends HeroSplitProps {}

const {
  title,
  subtitle,
  actions = [],
  image,
  imagePosition = 'right',
  size = 'auto',
  alignment = 'left',
  container,
  class: className,
  classList,
  id = 'hero',
  ...attrs
} = Astro.props;

const heroClasses = [
  'hero',
  'hero--split',
  `hero--${size}`,
  `hero--${alignment}`,
  imagePosition === 'left' && 'hero--image-left',
  className,
  classList,
].filter(Boolean).join(' ');
---

<section id={id} class={heroClasses} {...attrs}>
  <Container {...container}>
    <div class="hero__inner">
      <div class="hero__content">
        <slot name="badge" />

        <h1 class="hero__title">{title}</h1>

        {subtitle && <p class="hero__subtitle">{subtitle}</p>}

        {actions.length > 0 && (
          <div class="hero__actions">
            {actions.map((action, index) => (
              <Button
                href={action.href}
                type={action.type}
                variant={action.variant ?? (index === 0 ? 'primary' : 'secondary')}
                outline={action.outline ?? (index > 0 && !action.variant)}
                size={action.size}
                {...action.external ? { target: '_blank', rel: 'noopener noreferrer' } : {}}
              >
                {action.icon && <i class={action.icon}></i>}
                {action.label}
              </Button>
            ))}
          </div>
        )}

        <slot />
      </div>

      <div class="hero__image">
        {typeof image.src === 'string' ? (
          <img src={image.src} alt={image.alt} loading="eager" />
        ) : (
          <Image src={image.src} alt={image.alt} loading="eager" />
        )}
      </div>
    </div>
  </Container>
</section>

<style lang="scss">
  @use './heroes.scss';
</style>
