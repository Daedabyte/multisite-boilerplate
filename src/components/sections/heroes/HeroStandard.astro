---
/**
 * HeroStandard
 *
 * Full-width hero with background image and overlay.
 * Classic hero layout suitable for most landing pages.
 *
 * @variant standard
 * @since 1.0.0
 *
 * Best for: Landing pages, home pages, marketing sites
 * Avoid when: Need to showcase product images prominently
 *
 * @example
 * <HeroStandard
 *   title="Welcome to Our Site"
 *   subtitle="We help you achieve your goals"
 *   backgroundImage="/images/hero.jpg"
 *   actions={[{ label: 'Get Started', href: '/contact' }]}
 * />
 */

import type { HeroStandardProps } from './types';
import Container from '@components/ui/Container.astro';
import Button from '@components/ui/Button.astro';

interface Props extends HeroStandardProps {}

const {
  title,
  subtitle,
  actions = [],
  size = 'partial',
  alignment = 'center',
  backgroundImage,
  background,
  container,
  class: className,
  classList,
  id = 'hero',
  ...attrs
} = Astro.props;

const bgImage = backgroundImage ?? background?.image;

const heroClasses = [
  'hero',
  'hero--standard',
  `hero--${size}`,
  `hero--${alignment}`,
  className,
  classList,
].filter(Boolean).join(' ');
---

<section
  id={id}
  class={heroClasses}
  style={bgImage ? `--hero-bg-image: url(${bgImage})` : undefined}
  {...attrs}
>
  <Container {...container}>
    <div class="hero__inner">
      <div class="hero__content">
        <slot name="badge" />

        <h1 class="hero__title">{title}</h1>

        {subtitle && <p class="hero__subtitle">{subtitle}</p>}

        {actions.length > 0 && (
          <div class="hero__actions">
            {actions.map((action, index) => (
              <Button
                href={action.href}
                type={action.type}
                variant={action.variant ?? (index === 0 ? 'primary' : 'secondary')}
                outline={action.outline ?? (index > 0 && !action.variant)}
                size={action.size}
                {...action.external ? { target: '_blank', rel: 'noopener noreferrer' } : {}}
              >
                {action.icon && <i class={action.icon}></i>}
                {action.label}
              </Button>
            ))}
          </div>
        )}

        <slot />
      </div>
    </div>
  </Container>
</section>

<style lang="scss">
  @use './heroes.scss';
</style>
